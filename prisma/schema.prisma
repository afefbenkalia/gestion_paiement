generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  RESPONSABLE
  COORDINATEUR
  FORMATEUR
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id         Int        @id @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  role       Role       @default(FORMATEUR)
  specialite String?    // seulement pour formateur
  cv         String?    // lien vers le fichier uploadÃ©
  status     UserStatus @default(PENDING) // statut de la demande d'inscription
  createdAt  DateTime   @default(now())

 // ðŸ”½ Relation avec FicheDePaie
  fiches     FicheDePaie[]
}


model FicheDePaie {
  id          Int      @id @default(autoincrement())
  mois        String
  heures      Float
  montant     Float
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

