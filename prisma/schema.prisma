generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  RESPONSABLE
  COORDINATEUR
  FORMATEUR
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(FORMATEUR)
  fiches    FicheDePaie[]
  createdAt DateTime @default(now())
}

model FicheDePaie {
  id          Int      @id @default(autoincrement())
  mois        String
  heures      Float
  montant     Float
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

